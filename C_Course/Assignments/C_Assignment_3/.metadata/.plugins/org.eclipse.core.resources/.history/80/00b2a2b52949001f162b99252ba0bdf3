/*
================================================================
	Name		: q10.c
	Created on	: Jul 23, 2024
	Author		: ameer
	Description	: Same as the strupr function from string.h
				  converts all lowercase characters to uppercase and leaves the rest as is
=================================================================
 */
#include <stdio.h>

void toUpper(char *c)
{
	int i = 0;
	while(c[i])
	{
		if(c[i] >= 'a' && c[i] <= 'z')
			c[i] -= 'a' - 'A';
	}
}

int main(void)
{
	char c[] = "Hello my name is Ameer";
	toUpper(c);
	printf("%s\n", c);
}
