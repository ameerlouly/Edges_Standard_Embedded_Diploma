	Description	: Prints the nth term in the fibonacci sequence
				  using recursion and using for/while loops
=================================================================
 */
#include <stdio.h>

//Fib Sequence:
// 0,1,1,2,3,5,8.....

int fib_sequential(int n)
{
	int prev2 = 0, prev1 = 1;
	int result = 0;
	for(int i = 2; i < n; i++)
	{
		result = prev1 + prev2;
		prev2 = prev1;
		prev1 = result;
	}
	return result;
}

int main(void)
{
	printf("Sequenial Method: %d", fib_sequential(5));
	return 0;
}

