	Author		: ameer
	Description	: Counts the numbers of even and odd elements
				  in an array of integers
=================================================================
 */
#include <stdio.h>
#define SIZE 10

void countEvenOdd(int* arr, int size, int* evenCount, int oddCount)
{
	for(int i = 0; i < size; i++)
		if(arr[i] % 2 == 0)
			evenCount++;
		else
			oddCount++;
}
