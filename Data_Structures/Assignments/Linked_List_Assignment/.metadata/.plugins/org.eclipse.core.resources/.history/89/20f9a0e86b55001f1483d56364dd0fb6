=================================================================
 */

#ifndef LINKED_LIST_H_
#define LINKED_LIST_H_

	/*To allow linked list to store any type of data easily*/
typedef int elemtype;

	/*NODE DEFINITION*/
struct node;
typedef struct node* link;
typedef struct node
{
	int elem;
	link next;
} node;

	/*Bool datatype Definition*/
typedef enum
{
	false,
	true
} bool;

	/*FUNCTION PROTOTYPES*/
bool insertAtFirst(const elemtype e);
int search(const elemtype e);
void printList();
bool insertAndAdd(const elemtype e, int n);
elemtype findMiddle();
bool fifthFromBack(elemtype *fifth);
int sizeOfList());

#endif /* LINKED_LIST_H_ */
