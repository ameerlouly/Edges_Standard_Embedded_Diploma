#include "Linked_List.h"
#include <stdlib.h>
#include <stdio.h>
#include <assert.h>

link head = (void*)0;

bool insertAtFirst(const elemtype e)
{
	link add = (link)malloc(sizeof(node));
	assert(add);

	add->next = head;
	add->elem = e;

	head = add;
	return true;
}

int search(const elemtype e)
{
	if(head == NULL)
		return -1;

	link current = head;
	int n = 1;

	while(current)
	{
		if(current->elem == e)
			return n;
		n++;
		current = current->next;
	}

	return -1;
}

bool insertAndAdd(const elemtype e, int n)
{
	link add = (link)malloc(sizeof(node));

	if(head == NULL)
		return false;

	link current = head;
	for(int i = 0; i < n; i++)
	{
		if(current->next == NULL)
			return false;

		current = current->next;
	}

	add->next = current->next;
	current->next = add;
}


